generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cover {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  position  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Painting {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String   @default("")
  category  String
  year      String   @default("")
  medium    String   @default("")
  size      String   @default("")
  images    String[] @default([])
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id          Int      @id @default(autoincrement())
  avatarUrl   String?
  description String   @default("")
  tags        String[] @default([])
  updatedAt   DateTime @updatedAt
}

